<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="@dimen/_20sdp"
    tools:context=".FingerPrintScan">
    <TextView
        android:id="@+id/text_screen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorOnPrimary"
        android:textSize="@dimen/large"
        ></TextView>
    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/finger_print"
        android:id="@+id/iv_finger_print"

        android:layout_marginTop="@dimen/_70sdp"></ImageView>
    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/green_tick"
        android:id="@+id/iv_tick"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_70sdp"></ImageView>
    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/teal_200"
        android:text="Please Scan Your Fingerprint here to verify..."
        ></TextView>

</LinearLayout>